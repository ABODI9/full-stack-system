generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  name        String?
  email       String      @unique
  password    String
  role        String      @default("manager")
  createdAt   DateTime    @default(now())
  passwordSig String      @db.VarChar(64)
  records     Record[]
  costEntries CostEntry[]
  messages    Message[]
  orders      Order[]     @relation("UserOrders")

  @@index([passwordSig])
}

model Record {
  id        Int      @id @default(autoincrement())
  title     String
  value     Float
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model CostEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime
  items     String
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId, date])
  @@map("cost_entries")
}

model Message {
  id        Int      @id @default(autoincrement())
  role      String
  text      String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@map("messages")
}

model Order {
  id              Int      @id @default(autoincrement())
  insertdate      DateTime
  ordertotal      Decimal? @db.Decimal(12, 2)
  externalappname String?
  customerid      Int?
  lat             Float?
  lng             Float?
  userId          Int?
  user            User?    @relation("UserOrders", fields: [userId], references: [id])

  @@index([insertdate])
  @@index([externalappname])
  @@index([customerid])
  @@map("orders")
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}
