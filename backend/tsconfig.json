{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "rootDir": "src",          // ← المهم
    "outDir": "dist",          // ← المهم
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],     // ما نحتاج seed هنا؛ بنشغله بـ tsx
  "exclude": ["node_modules", "dist"]
}
